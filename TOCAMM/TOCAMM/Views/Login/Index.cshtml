@model TOCAMM.Models.Usuario

@{
    ViewBag.Title = "Iniciar Sesión";
}


    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>prueba</title>
        <link href="~/Login/Bootstrap/Css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Login/Assets/signup-form.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container" style="position:relative; top:25%; align-items:center;">

            <div class="signup-form-container">
                @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
                {
                    <!-- form start -->
                    <form method="post" role="form" id="register-form" autocomplete="off" action="/">



                        <div class="form-header">
                            <h3 class="form-title"><i class="fa fa-user"></i>Inicia sesión</h3>

                            <div class="pull-right">
                                <h3 class="form-title"><span class=""></span></h3>
                            </div>

                        </div>

                        <div class="form-body">

                            <div class="alert alert-info" id="message" style="display:none;">
                                submitted
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    <input name="nombreus" type="text" class="form-control" placeholder="Usuario">
                                </div>
                                <span class="help-block" id="error"></span>
                            </div>



                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                                    <input name="pass" id="myInput" type="password" class="form-control" placeholder="Contraseña.">

                                </div>
                                <span class="help-block" id="error"></span>
                            </div>

                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" onclick="myFunction()">
                                <label class="form-check-label" for="myInput()">Mostrar contraseña</label>
                            </div>
                            <div class="pull-left">
                                <p class="forgot">@Html.ActionLink("Se te olvidó tu contraseña?", "ForgotPassword", "Account")</p>
                                
                            </div>
                            <br />
                        </div>


                        <div class="row">

                            @*<div class="form-group col-lg-6">
                        <div class="form-footer">
                            <button type="submit" class="btn btn-info">
                                <span class="glyphicon glyphicon-log-in"></span> Regístrate !
                            </button>
                        </div>
                    </div>*@
                            <div class="form-group">
                                <div class="form-group col-lg-6">
                                    <button type="submit" class="btn btn-info-lg btn-primary"> <span class="glyphicon glyphicon-log-in" value="Login"></span> Inicia sesión !</button>
                                    <button type="reset" class="btn btn-info-lg">Cancelar</button>

                                </div>
                            </div>
                        </div>
                        

                    </form>
                }

                </div>

        </div>
        <script src="~/Login/Bootstrap/Js/bootstrap.min.js"></script>
        <script src="~/Login/Assets/jquery-1.11.2.min.js"></script>
        <script src="~/Login/Assets/jquery.validate.min.js"></script>
        <script src="~/Login/Assets/register.js"></script>

        <script src="~/Login/Assets/Showpassword.js"></script>
        
        
    </body>
</html>





<div>
    @Html.ActionLink("Back to List", "Index")
</div>

