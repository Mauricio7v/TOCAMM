@model IEnumerable<TOCAMM.Models.Productos>

@{
    ViewBag.Title = "Search Filter";
}

<h2>Filtro de búsqueda</h2>

<p>

    @using (Html.BeginForm())
    {
        <input type="text" name="Nombre" placeholder="Escribe el nombre del producto." class="form-control" /> <br />
        <input class="btn btn-default" type="submit" value="Buscar" />

    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@if (Model.Count() > 0)
{

}
else
{
    <div class="alert alert-danger" role="alert">
        <b> No hay resultados para esta búsqueda.</b>
    </div>

}
<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
